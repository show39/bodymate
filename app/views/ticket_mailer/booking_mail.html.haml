%html
  %head
    %meta{content: 'text/html; charset=UTF-8'}
  %body
    %h3 #{@booking.name}様
    %p #{@booking.ticket.event.name}へのお申し込みありがとうございます。
    %h4 お申し込み情報
    %table
      %tbody
        %tr
          %th お申込者名
          %td #{@booking.name}
        %tr
          %th メールアドレス
          %td #{@booking.email}
        %tr
          %th コメント
          %td #{@booking.comment}
        %tr
          %th チケット名
          %td #{@booking.ticket.name}
        %tr
          %th 価格
          %td #{@booking.ticket.price.to_s(:delimited)}円
        %tr
          %th イベント名
          %td #{@booking.ticket.event.name}
        %tr
          %th 開催日時
          %td #{@booking.ticket.event.event_start} 〜 #{@booking.ticket.event.event_end}
        %tr
          %th 会場
          %td #{@booking.ticket.event.place}
        %tr
          %th 主催者
          %td #{@booking.ticket.event.organizer}
        %tr
          %th 主催者TEL
          %td #{@booking.ticket.event.tel}
        %tr
          %th 主催者E-mail
          %td #{@booking.ticket.event.email}
    %h4 イベント詳細はこちら
      = event_url(@booking.ticket.event)
