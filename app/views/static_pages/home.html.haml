.container-fluid.new-events
  %h2 新着イベント
  %p.new-events-description 最近投稿されたスポーツイベントです。
  .new-events-wraper.row
    - @events.each do |event|
      .col-md-3.col-sm-6.col-xs-12
        = link_to event do
          .event-block
            .event-image
              .event-name= event.name
              .event-name-background= event.name
              = image_tag("event-image.jpg", alt: "イベントイメージ", size: "960x640", class: "img-responsive")
              = link_to "ジャンル1サンプル", "#", class: "sports-genre1"
              = link_to "ジャンル2サンプル", "#", class: "sports-genre2"
              %span.price ¥2,000
            = link_to event do
              .event-description-area
                .event-description= event.description
              .event-information-area
                %p.event-start= event.event_start
                %p.event-address
                  %span.event-prefecture= event.prefecture
                  %span.event-city= event.city
                  %span.event-address1= event.address1
                  %span.event-address2= event.address2

